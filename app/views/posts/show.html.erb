<%= image_tag @post.image(:large) %>

<h3>
    <%= @post.description %>
    </h3>
    
    <h5>by 
        <%= @post.user.login %>
    </h5>
    
    <%= link_to like_post_path(@post), method: :put, :class => "btn btn-default" do %>
    <span class="glyphicon glyphicon-heart-empty"></span>
    <%= @post.get_upvotes.size%>
    <% end %>