<% @posts.each do |x| %>
    <div class = "pagination-center">
        <a href = "/posts/<%=x.id%>">
        <%=image_tag x.image.url{:medium}, :class => "thumbnail"%>
        </a>
        <br>
        <div class="text-center">
            <%= x.description %>
        
        
        <%= link_to like_post_path(x), method: :put, :class => "btn btn-default" do %>
        <span class="glyphicon glyphicon-heart-empty"></span>
        <%= x.get_upvotes.size%>
        
        <% end %>
        
      </div>
    </div>

<% end %>

</div>